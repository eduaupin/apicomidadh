<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.views.home.PratosPopularesFragment">


    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:id="@+id/card_view_evento_home"
        android:layout_width="150dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/cardview_light_background"
        app:cardCornerRadius="5dp"
        android:outlineAmbientShadowColor="@color/black60">

    <ImageView
        android:id="@+id/img_prato_home"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="130dp"
        android:src="@drawable/churros"
        />

    <TextView
        android:id="@+id/txt_nome_prato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noite do churros"
        android:textColor="@color/black60"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="138dp" />

    </android.support.v7.widget.CardView>

</FrameLayout>
