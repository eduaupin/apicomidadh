<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.digitalhouse.foodparty">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.eventos.AdicionarPratosAoEventoActivity"></activity>
        <activity android:name=".views.pratos.NaoExistemFavoritosActivity" />
        <activity android:name=".views.eventos.NaoExistemEventosActivity" />
        <activity android:name=".views.sobre.SobreActivity"></activity>
        <activity android:name=".views.login.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.pratos.DetalhesDoPratoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.pratos.ListaDePratosActivity" />
        <activity
            android:name=".views.eventos.DetalhesDoEventoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.eventos.AdicionarPessoaAoEventoActivity"></activity>
        <activity
            android:name=".views.eventos.CriarEventoActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".views.home.NotificacoesActivity" />
        <activity android:name=".views.login.FeedbackEsqueciSenhaActivity" />
        <activity android:name=".views.login.EsqueciSenhaActivity" />
        <activity android:name=".views.eventos.ListaEventosActivity" />
        <activity
            android:name=".views.home.HomeActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.login.RegisterActivity" />
        <activity android:name=".views.login.LoginActivity" />
        <activity
            android:name=".views.pratos.PratosFavoritosActivity"
            android:label="@string/favoritos" />
    </application>

</manifest>